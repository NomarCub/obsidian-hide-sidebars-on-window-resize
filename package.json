{
  "name": "obsidian-hide-sidebars-when-narrow",
  "version": "1.1.1",
  "description": "This Obsidian plugin hides the sidebars when the window is resized to be narrower",
  "main": "main.js",
  "engines": {
    "node": ">=22.18"
  },
  "scripts": {
    "dev": "node esbuild.config.mts",
    "build": "node esbuild.config.mts production",
    "check": "npm run type-check && npm run lint && npm run format",
    "type-check": "tsc -noEmit",
    "lint": "biome lint && eslint",
    "lint:fix": "biome lint --fix && eslint --fix",
    "format": "biome format",
    "format:fix": "biome format --write",
    "version": "node version-bump.mts"
  },
  "author": "Michael Hanson, NomarCub",
  "license": "MIT",
  "devDependencies": {
    "@biomejs/biome": "^2.3.8",
    "@eslint/js": "^9.39.1",
    "@types/node": "~22.17.0",
    "builtin-modules": "^4.0.0",
    "esbuild": "^0.27.1",
    "eslint": "^9.39.1",
    "obsidian": "~1.8.7",
    "obsidian-typings": "4.19.0",
    "tslib": "^2.8.1",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.48.1"
  }
}
